        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3280groupProj"
        mc:Ignorable="d"
        Title="Item" Height="628.651" Width="623.5">
    <Grid Margin="0,0,27,25">
        <DataGrid Name="dgItems" HorizontalAlignment="Left" Height="214" Margin="42,349,0,0" VerticalAlignment="Top" Width="537"/>
        <Button Name="btnSearchItems" Content="Display All Items" HorizontalAlignment="Left" Margin="482,273,0,0" VerticalAlignment="Top" Width="100" Height="29" Click="btnSearchItems_Click"/>
