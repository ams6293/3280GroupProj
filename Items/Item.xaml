        <Label x:Name="lblItemCode2" Content="Item Code:" HorizontalAlignment="Left" Margin="85,77,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblItemCost" Content="Item Cost:" HorizontalAlignment="Left" Margin="85,103,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbItemCost" HorizontalAlignment="Left" Height="23" Margin="158,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.325,-0.113"/>
        <Label x:Name="lblItemDesc" Content="Item Description:" HorizontalAlignment="Left" Margin="53,136,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbItemDesc" HorizontalAlignment="Left" Height="112" Margin="158,136,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="215"/>
        <GroupBox Header="Modify or Add an Item" HorizontalAlignment="Left" Height="284" Margin="42,41,0,0" VerticalAlignment="Top" Width="397" FontWeight="Bold"/>
        <Button x:Name="btnMain" Content="Return to Main" HorizontalAlignment="Left" Margin="482,22,0,0" VerticalAlignment="Top" Width="100" Click="btnMain_Click" Height="28"/>

    </Grid>
</Window>
